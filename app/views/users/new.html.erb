<section class="user-section">
  <h1 class="my-5 text-center">Signup</h1>

  <%= form_with model: @user do |form| %>

      <div class="mb-3 text-left">
          <%= form.label :first_Name, "First Name", class: "form-label" %>
          <%= form.text_field :first_name, class: "form-control" %>
      </div>
      <div class="mb-3 text-left">
          <%= form.label :last_Name, "Last Name", class: "form-label" %>
          <%= form.text_field :last_name, class: "form-control" %>
      </div>
      <div class="mb-3 text-left">
          <%= form.label :email, class: "form-label" %>
          <%= form.text_field :email, type: "email", class: "form-control" %>
      </div>

      <div class="mb-3 text-left">
          <%= form.label :password, class: "form-label" %>
          <%= form.password_field :password, type: "password", class: "form-control" %>
          <%= form.password_field :password_confirmation, type: "password", class: "form-control" %>

      </div>
      <%= form.submit class: "btn btn-primary" %>
  <% end %>
</section>